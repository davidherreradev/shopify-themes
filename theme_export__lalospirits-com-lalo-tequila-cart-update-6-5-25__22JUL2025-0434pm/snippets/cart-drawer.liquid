<div class="cart-drawer flex flex-col overflow-y-scroll bg-white md:max-w-xl" tabindex="-1" inert>
  <div class="flex justify-between mx-5 pt-4 pb-6 md:mx-7">
    <h2 class="d4">{{ 'sections.cart.title' | t }}</h2>
    <button type="button" class="cart-close block w-6 link" aria-label="Close Cart">
      {% render 'icon-close' %}
    </button>
  </div>
  <div class="cart-drawer__items grow overflow-y-scroll px-5 md:px-7"></div>
  <div class="cart-drawer__footer px-5 pb-6 md:px-7">
    {% if settings.cart_note == true %}
      <div class="cart-drawer__note mt-4 py-3 border-t border-silver">
        <div class="accordion">
          <div class="ac">
            <button type="button" class="ac-trigger link grid grid-cols-[1fr_14px] w-full font-medium text-[13px] uppercase tracking-wide text-left">
              <span class="pr-7 lg:pr-32">{{ 'sections.cart.note' | t }}</span>
              <span class="ac-icon mt-0.5 text-gold">{% render 'icon-plus' %}</span>
            </button>
            <div class="ac-panel">
              <label for="CartDrawer-Note" class="sr-only">{{ 'sections.cart.note_label' | t }}</label>
              <textarea
                id="CartDrawer-Note"
                rows="3"
                class="w-full my-2 px-2.5 py-2 p4 placeholder:text-xs border border-silver outline-0 hover:border-gold focus:border-gold transition-colors"
                name="note"
                placeholder="{{ 'sections.cart.note_label' | t }}"
              >{{ cart.note }}</textarea>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
    <div class="flex justify-between border-t border-silver pt-5 h4">
      <div>{{ 'sections.cart.subtotal' | t }}</div>
      <div class="cart-drawer__subtotal">{{ cart.total_price | money }}</div>
    </div>
    <!-- <a href="{{ routes.checkout_url }}" class="cart-drawer__checkout btn btn--primary block w-full mt-5 text-center">
      {{ 'sections.cart.checkout' | t }}
    </a> -->
    <a href="{{ routes.cart_url }}" class="cart-drawer__checkout btn btn--primary block w-full mt-5 text-center">
      {{ 'sections.cart.checkout' | t }}
    </a>
  </div>
</div>
<div class="cart-overlay fixed inset-0 z-20 bg-blue opacity-60" onclick="window.cartClose(); return false;"></div>