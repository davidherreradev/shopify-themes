<div class="container pt-3">
  <div class="grid-layout text-center">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="card block" target="_blank" rel="noreferrer noopener" download>
        <div class="card__image relative aspect-square">
          {% if block.settings.image %}
            {{ block.settings.image | image_url: width: 1280 | image_tag: class: 'object-cover w-full h-full' }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder object-cover w-full h-full' }}
          {% endif %}
        </div>
        {% if block.settings.title != blank %}
          <h3 class="h4 mt-5 px-2">
            {{ block.settings.title }}
          </h3>
        {% endif %}
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Brand assets",
    "tag": "section",
    "blocks": [
      {
        "name": "Asset",
        "type": "asset",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Asset"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Download link",
            "info": "Upload the asset to [content files](https://admin.shopify.com/store/lalospirits/content/files?selectedView=all), then copy and paste the link here."
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand assets"
      }
    ],
    "enabled_on": {
      "templates": [
        "page"
      ]
    }
  }
{% endschema %}