<div class="container mt-20">
  <div class="max-w-6xl mx-auto">
    {% if section.settings.heading != blank %}
      <h2 class="h2 text-gold text-center mb-6">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    <div class="flex flex-wrap justify-center">
      {% for block in section.blocks %}
        <div class="w-1/2 p-3 lg:w-1/4">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" target="_blank" rel="noreferrer noopener" class="card">
          {% endif %}
            <div class="card__image aspect-square">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 500 | image_tag: class: 'object-cover w-full h-full' }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder object-cover w-full h-full' }}
              {% endif %}
            </div>
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Order delivery",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Delivery",
        "type": "delivery",
        "settings": [
          {
            "type": "text",
            "id": "text",
            "label": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ]
  }
{% endschema %}