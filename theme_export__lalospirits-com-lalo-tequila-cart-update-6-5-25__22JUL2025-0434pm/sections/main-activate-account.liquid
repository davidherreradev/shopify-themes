<div class="customer activate">
  <h1 class="d2 mt-6 text-center">
    {{ 'customer.activate_account.title' | t }}
  </h1>
  <div class="max-w-[350px] mx-auto">
    {% form 'activate_customer_password' %}
      {% if form.errors %}
        <div class="mt-10 text-cognac">
          {{ form.errors | default_errors }}
        </div>
      {% endif %}
      <div class="mt-12 space-y-3.5">
        <div>
          <label for="Password" class="sr-only">
            {{ 'customer.activate_account.password' | t }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="Password"
            autocomplete="new-password"
            placeholder="{{ 'customer.activate_account.password' | t }}"
            class="form-input"
          >
        </div>
        <div>
          <label for="PasswordConfirmation" class="sr-only">
            {{ 'customer.activate_account.password_confirm' | t }}
          </label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation"
            autocomplete="new-password"
            placeholder="{{ 'customer.activate_account.password_confirm' | t }}"
            class="form-input"
          >
        </div>
      </div>
      <button class="btn btn--primary block mx-auto mt-10">
        {{ 'customer.activate_account.submit' | t }}
      </button>
      <div class="mt-2.5 text-center">
        <button name="decline" class="pa2 link">
          {{ 'customer.activate_account.cancel' | t }}
        </button>
      </div>
    {% endform %}
  </div>
</div>

{% schema %}
  {
    "name": "Activate account",
    "tag": "section",
    "class": "container"
  }
{% endschema %}