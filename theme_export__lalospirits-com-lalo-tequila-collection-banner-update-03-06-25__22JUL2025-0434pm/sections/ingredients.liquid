<div class="my-24 py-24 text-center">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="font-body font-bold text-2xl md:text-3xl tracking-normal">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <h3 class="font-display-italic text-2xl md:text-3xl tracking-normal">
        {{ section.settings.subtitle }}
      </h3>
    {% endif %}
  </div>
  <div class="grid max-w-[200px] mx-auto md:w-auto md:max-w-5xl md:grid-cols-3">
    {% for block in section.blocks %}
      <div class="px-5 mt-10 md:px-14 lg:px-20">
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 320 | image_tag: class: '' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder object-cover w-full h-full' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Ingredients",
    "tag": "section",
    "class": "bg-blue text-white",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Only 3 Ingredients."
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Additive Free."
      }
    ],
    "blocks": [
      {
        "name": "Ingredient",
        "type": "ingredient",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "enabled_on": {
      "templates": [
        "product"
      ]
    }
  }
{% endschema %}